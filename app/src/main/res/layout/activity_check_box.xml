<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ycjt.customswitch.CheckBoxActivity">

    <!--  21  以下 更改图片的方式 -->
    <CheckBox
        android:id="@+id/select_all"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <!--
    需要注意的是：
    colorControlNormal和colorControlActivated分别对应框架控件在普通状态和激活状态下的颜色；
    在为CheckBox设置style时，需要使用android:theme="@style/My_CheckBox"，使用style="@style/My_CheckBox"没有效果。 -->
    <CheckBox
        android:id="@+id/save_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/My_CheckBox"/>

</LinearLayout>
